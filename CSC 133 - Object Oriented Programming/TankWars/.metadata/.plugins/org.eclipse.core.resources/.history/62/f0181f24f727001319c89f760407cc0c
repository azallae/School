package a4;

import java.awt.Color;

import a2.Projectile;

public class Missile extends Projectile {
	private int lifetime;
	
	public Missile(int x, int y, int speed, int direction) {
		setLifetime(5);
		setSpeed(speed + 5);
		myColor = Color.BLACK;
	}
	
	private void setLifetime(int lt) {
		this.lifetime = lt;
	}
}
